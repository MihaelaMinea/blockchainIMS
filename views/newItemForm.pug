
doctype html
html
  head
    title= title
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/styles.css")
  body
    .container
      h1 Inventory Management System
      p Welcome to #{message}! Please fill out the form below to add a new item to the inventory.
      br
      form(action="/api/items" method="POST" class="inventory-form")
        .form-group
          label(for="itemName") Item Name
          input(type="text" id="itemName" name="name" placeholder="Enter item name" required)

        .form-group
          label(for="description") Description
          textarea(id="description" name="description" rows="3" placeholder="Enter item description" required)

        .form-group
          label(for="supplier") Supplier
          input(type="text" id="supplier" name="supplier" placeholder="Enter supplier name" required)

        .form-group
          label(for="price") Price (Â£)
          input(type="number" id="price" name="price" min="0" step="0.01" placeholder="Enter price" required)

        .form-group
          label(for="quantity") Quantity
          input(type="number" id="quantity" name="quantity" min="1" placeholder="Enter quantity" required)

        .form-group
          label(for="category") Category
          select(id="category" name="category")
            option(value="electronics") Electronics
            option(value="furniture") Furniture
            option(value="other") Other

        .form-group
          label(for="dateReceived") Date Received
          input(type="date" id="dateReceived" name="dateReceived" required)

        .form-group
          label(for="branch") Branch
          select(id="branch" name="branch")
            option(value="London") London
            option(value="Amsterdam") Amsterdam
            option(value="Bucharest") Bucharest

        .form-group
          label(for="userRole") User Role
          select(id="userRole" name="userRole")
            option(value="assistant") Assistant
            option(value="manager") Manager

        .form-group
          label(for="userName") User Name
          select(id="userName" name="userName")
            option(value="Johana Gratified") Johana Gratified
            option(value="John Doe") John Doe
            option(value="Carla Baltimore") Carla Baltimore
            option(value="Samuel Everett") Samuel Everett
            option(value="Linda Grace") Linda Grace
            option(value="Michael Porter") Michael Porter

        button(type="submit" class="btn-submit") Add Item
