doctype html
html
  head
    title= title
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/styles.css")
  body
    .container
      h1 Inventory Management System
      p Welcome to #{message}! Please fill out the form below to add a new item to the inventory.
      br
      form(action="/api/items" method="POST" class="inventory-form")
        .form-group
          label(for="itemName") Item Name
          input(type="text" id="itemName" name="name" placeholder="Enter item name" required)

        .form-group
          label(for="description") Description
          textarea(id="description" name="description" rows="3" placeholder="Enter item description" required)

        .form-group
          label(for="supplier") Supplier
          input(type="text" id="supplier" name="supplier" placeholder="Enter supplier name" required)

        .form-group
          label(for="price") Price (Â£)
          input(type="number" id="price" name="price" min="0" step="0.01" placeholder="Enter price" required)

        .form-group
          label(for="quantity") Quantity
          input(type="number" id="quantity" name="quantity" min="1" placeholder="Enter quantity" required)

        .form-group
          label(for="category") Category
          select(id="category" name="category")
            option(value="electronics") Electronics
            option(value="furniture") Furniture
            option(value="stationery") Stationery
            option(value="clothing") Clothing
            option(value="food") Food
            option(value="other") Other

        .form-group
          label(for="dateReceived") Date Received
          input(type="date" id="dateReceived" name="dateReceived" required)

        button(type="submit" class="btn-submit") Add Item
